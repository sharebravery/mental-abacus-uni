{
  "prettier.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.associations": {
    "*.css": "postcss"
  },
  "editor.formatOnSave": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "vite.config.*": "pages.config.*, manifest.config.*, uno.config.*, volar.config.*, *.env, .env.*"
  },

  /**
   * 解决 unocss @apply 警告问题
   * @see https://github.com/tailwindlabs/tailwindcss/discussions/5258#discussioncomment-1979394
   */
  "scss.lint.unknownAtRules": "ignore",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#ba4b8c",
    "activityBar.background": "#ba4b8c",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#89b847",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#ba4b8c",
    "statusBar.background": "#983a71",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#ba4b8c",
    "statusBarItem.remoteBackground": "#983a71",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#983a71",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#983a7199",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#983a71"
